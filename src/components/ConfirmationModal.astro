<dialog id="confirmation-modal" class="rounded-xl shadow-2xl p-0 backdrop:bg-black/50 backdrop:backdrop-blur-sm w-full max-w-sm m-auto open:animate-fade-in">
    <div class="bg-white p-8 rounded-2xl relative">
        <div class="text-center">
             <div class="mx-auto flex items-center justify-center h-14 w-14 rounded-full bg-red-50 mb-6 border border-red-100">
                <svg class="h-7 w-7 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-slate-900" id="modal-title">Confirmar Acción</h3>
            <div class="mt-3">
                <p class="text-sm text-slate-500 leading-relaxed" id="modal-desc">¿Estás seguro de que deseas realizar esta acción? No se puede deshacer.</p>
            </div>
        </div>
        <div class="mt-8 flex flex-col sm:flex-row justify-center gap-3">
            <button 
                type="button" 
                id="cancel-btn"
                class="w-full flex justify-center items-center rounded-xl border border-slate-200 px-6 py-3 bg-white text-sm font-bold text-slate-600 hover:bg-slate-50 transition-all focus:outline-none"
                onclick="document.getElementById('confirmation-modal').close()"
            >
                Cancelar
            </button>
            <button 
                type="button" 
                id="confirm-btn"
                class="w-full flex justify-center items-center rounded-xl border border-transparent px-6 py-3 bg-red-600 text-sm font-bold text-white hover:bg-red-700 transition-all shadow-lg shadow-red-900/10 focus:outline-none active:scale-95"
            >
                Confirmar
            </button>
        </div>
    </div>
</dialog>

<script>
    // Extend Window interface to include showConfirm method
    declare global {
        interface Window {
            showConfirm: (title: string, message: string, callback: () => void) => void;
        }
    }

    let confirmCallback: (() => void) | null = null;

    window.showConfirm = (title: string, message: string, callback: () => void) => {
        const modal = document.getElementById('confirmation-modal') as HTMLDialogElement | null;
        const titleEl = document.getElementById('modal-title');
        const descEl = document.getElementById('modal-desc');
        const confirmBtn = document.getElementById('confirm-btn');

        if (!modal || !titleEl || !descEl || !confirmBtn) {
            console.error('Modal elements not found');
            return;
        }

        if (title) titleEl.textContent = title;
        if (message) descEl.textContent = message;
        
        confirmCallback = callback;
        
        // Remove old listeners to prevent stacking
        const newBtn = confirmBtn.cloneNode(true) as HTMLElement;
        confirmBtn.parentNode?.replaceChild(newBtn, confirmBtn);
        
        newBtn.addEventListener('click', () => {
            if (confirmCallback) confirmCallback();
            modal.close();
        });

        modal.showModal();
    };
</script>

---
/**
 * Registration Progress Bar Component
 * Shows team completeness status (11 player minimum)
 */

interface Props {
  teamId: string;
  currentPlayers: number;
  requiredPlayers?: number;
  hasCaptain: boolean;
  hasFieldAddress: boolean;
}

const { 
  teamId, 
  currentPlayers, 
  requiredPlayers = 11,
  hasCaptain,
  hasFieldAddress
} = Astro.props;

const percentComplete = Math.min(Math.round((currentPlayers / requiredPlayers) * 100), 100);
const canSubmit = currentPlayers >= requiredPlayers && hasCaptain && hasFieldAddress;

const getStatusColor = () => {
  if (canSubmit) return 'bg-green-500';
  if (percentComplete >= 70) return 'bg-yellow-500';
  return 'bg-red-500';
};

const getTextColor = () => {
  if (canSubmit) return 'text-green-600';
  if (percentComplete >= 70) return 'text-yellow-600';
  return 'text-red-600';
};
---

<div class="registration-progress bg-white rounded-lg shadow-md p-6 mb-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-bold text-slate-800">Estado de Inscripción</h3>
    <span class={`text-2xl font-bold ${getTextColor()}`}>
      {percentComplete}%
    </span>
  </div>

  <!-- Progress Bar -->
  <div class="w-full bg-slate-200 rounded-full h-4 mb-4 overflow-hidden">
    <div 
      class={`h-full ${getStatusColor()} transition-all duration-500 ease-out rounded-full`}
      style={`width: ${percentComplete}%`}
    >
    </div>
  </div>

  <!-- Player Count -->
  <div class="grid grid-cols-3 gap-4 mb-4">
    <div class="text-center">
      <div class={`text-3xl font-bold ${currentPlayers >= requiredPlayers ? 'text-green-600' : 'text-slate-600'}`}>
        {currentPlayers}
      </div>
      <div class="text-sm text-slate-500">Jugadores</div>
    </div>
    
    <div class="text-center">
      <div class="text-3xl font-bold text-slate-400">/</div>
      <div class="text-sm text-slate-500">de</div>
    </div>
    
    <div class="text-center">
      <div class="text-3xl font-bold text-slate-600">
        {requiredPlayers}
      </div>
      <div class="text-sm text-slate-500">Requeridos</div>
    </div>
  </div>

  <!-- Requirements Checklist -->
  <div class="space-y-2 mb-4">
    <div class="flex items-center gap-2">
      {currentPlayers >= requiredPlayers ? (
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      ) : (
        <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      )}
      <span class={currentPlayers >= requiredPlayers ? 'text-green-600' : 'text-slate-600'}>
        Mínimo {requiredPlayers} jugadores
      </span>
    </div>

    <div class="flex items-center gap-2">
      {hasCaptain ? (
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      ) : (
        <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      )}
      <span class={hasCaptain ? 'text-green-600' : 'text-slate-600'}>
        Capitán asignado
      </span>
    </div>

    <div class="flex items-center gap-2">
      {hasFieldAddress ? (
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      ) : (
        <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
      )}
      <span class={hasFieldAddress ? 'text-green-600' : 'text-slate-600'}>
        Dirección de cancha
      </span>
    </div>
  </div>

  <!-- Submit Button -->
  {canSubmit ? (
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
      <p class="text-green-800 font-semibold mb-2">
        ✓ Equipo listo para enviar a revisión
      </p>
      <button 
        type="button"
        class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg transition-colors"
        onclick="submitTeamForReview()"
      >
        Enviar a Revisión
      </button>
    </div>
  ) : (
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 text-center">
      <p class="text-yellow-800 font-medium">
        Complete los requisitos para enviar a revisión
      </p>
    </div>
  )}
</div>

<style>
  .registration-progress {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

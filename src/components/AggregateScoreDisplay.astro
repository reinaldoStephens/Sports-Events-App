---
import { calculateAggregateScore } from '@/utils/phase-validation';

interface Props {
  partidoIda: any; // Will use proper type after types are regenerated
  partidoVuelta: any;
  usaGolVisitante?: boolean;
  showDetails?: boolean;
}

const { partidoIda, partidoVuelta, usaGolVisitante = false, showDetails = true } = Astro.props;

const aggregate = calculateAggregateScore(partidoIda, partidoVuelta, usaGolVisitante);

// Get team names
const equipoLocal = partidoIda.local?.nombre || 'Equipo Local';
const equipoVisitante = partidoIda.visitante?.nombre || 'Equipo Visitante';
---

<div class="aggregate-score-card bg-gradient-to-br from-slate-50 to-blue-50 border-2 border-blue-200 rounded-xl p-6 shadow-lg">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-bold text-slate-800 uppercase tracking-tight">
      üìä Marcador Agregado
    </h3>
    {aggregate.usedAwayGoals && (
      <span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full font-semibold">
        ‚ö° Gol de visitante
      </span>
    )}
  </div>

  {showDetails && (
    <div class="space-y-3 mb-4">
      <!-- First Leg -->
      <div class="flex items-center justify-between bg-white rounded-lg p-3 border border-slate-200">
        <span class="text-sm text-slate-600 font-medium">Ida:</span>
        <div class="flex items-center gap-3">
          <span class="text-sm font-semibold text-slate-700">{equipoLocal}</span>
          <span class="text-lg font-bold text-blue-600">
            {partidoIda.puntos_local || 0} - {partidoIda.puntos_visitante || 0}
          </span>
          <span class="text-sm font-semibold text-slate-700">{equipoVisitante}</span>
        </div>
      </div>

      <!-- Second Leg -->
      <div class="flex items-center justify-between bg-white rounded-lg p-3 border border-slate-200">
        <span class="text-sm text-slate-600 font-medium">Vuelta:</span>
        <div class="flex items-center gap-3">
          <span class="text-sm font-semibold text-slate-700">{equipoVisitante}</span>
          <span class="text-lg font-bold text-blue-600">
            {partidoVuelta.puntos_local || 0} - {partidoVuelta.puntos_visitante || 0}
          </span>
          <span class="text-sm font-semibold text-slate-700">{equipoLocal}</span>
        </div>
      </div>
    </div>
  )}

  <!-- Aggregate Total -->
  <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-lg p-4 text-white">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <span class="text-sm font-medium opacity-90">AGREGADO:</span>
        <span class="text-2xl font-black">
          {aggregate.localAgregado} - {aggregate.visitanteAgregado}
        </span>
      </div>

      {aggregate.ganadorId && (
        <div class="flex items-center gap-2 bg-white/20 px-3 py-1 rounded-full">
          <span class="text-xs font-semibold">GANADOR:</span>
          <span class="text-sm font-bold">
            {aggregate.ganadorId === partidoIda.equipo_local_id ? equipoLocal : equipoVisitante}
          </span>
        </div>
      )}
    </div>
  </div>

  {aggregate.requierePenales && (
    <div class="mt-4 bg-yellow-50 border-2 border-yellow-300 rounded-lg p-3 flex items-center gap-3">
      <span class="text-2xl">‚ö†Ô∏è</span>
      <div>
        <p class="text-sm font-bold text-yellow-900">Definici√≥n por Penales Requerida</p>
        <p class="text-xs text-yellow-700">El marcador agregado est√° empatado. Se debe definir por tanda de penales.</p>
      </div>
    </div>
  )}
</div>

<style>
  .aggregate-score-card {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

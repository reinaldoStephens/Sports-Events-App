---
import AdminSidebarLayout from '../../layouts/AdminSidebarLayout.astro';
import ToastNotification from '../../components/ToastNotification.astro';
import { actions } from 'astro:actions';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login');
}

let successMessage = '';
let errorMessage = '';
let teamCreated = false;

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    
    console.log('Creating team with data:', {
      nombre: formData.get('nombre'),
      telefono_contacto: formData.get('telefono_contacto'),
      direccion_cancha: formData.get('direccion_cancha'),
      delegado_id: user.id
    });
    
    // Pass FormData directly since action expects 'form'
    const result = await Astro.callAction(actions.createTeamAsDelegado, formData);
    
    console.log('Action result:', result);
    
    if (result.data?.success) {
      successMessage = `Equipo "${formData.get('nombre')}" creado exitosamente`;
      teamCreated = true;
      // Redirect after allowing page to render
      return Astro.redirect('/delegado/equipo');
    } else if (result.error) {
      console.error('Action error:', result.error);
      errorMessage = result.error.message || 'Error al crear equipo';
    }
  } catch (error: any) {
    console.error('Caught error:', error);
    errorMessage = error.message || 'Error inesperado al crear equipo';
  }
}
---

<AdminSidebarLayout title="Crear Equipo">
  <ToastNotification />
  
  <div class="container mx-auto px-4 py-8 max-w-2xl">
    <div class="mb-8">
      <a href="/delegado/equipo" class="text-blue-600 hover:text-blue-800 flex items-center gap-2 mb-4">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Volver
      </a>
      
      <h1 class="text-3xl font-bold text-slate-800 mb-2">
        Crear Nuevo Equipo
      </h1>
      <p class="text-slate-600">
        Completa la información de tu equipo para comenzar
      </p>
    </div>

    {successMessage && (
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
        <p class="text-green-800 font-medium">✓ {successMessage}</p>
        <p class="text-sm text-green-700 mt-1">Redirigiendo...</p>
      </div>
    )}

    {errorMessage && (
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-800 font-medium">{errorMessage}</p>
      </div>
    )}

    <form method="POST" class="bg-white rounded-lg shadow-md p-8">
      <div class="space-y-6">
        <!-- Nombre del Equipo -->
        <div>
          <label for="nombre" class="block text-sm font-semibold text-slate-700 mb-2">
            Nombre del Equipo *
          </label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            required
            minlength="3"
            placeholder="Ej: Club Deportivo San José"
            class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>

        <!-- Dirección de la Cancha -->
        <div>
          <label for="direccion_cancha" class="block text-sm font-semibold text-slate-700 mb-2">
            Dirección de la Cancha *
          </label>
          <textarea
            id="direccion_cancha"
            name="direccion_cancha"
            required
            rows="3"
            placeholder="Ej: Estadio Municipal, 200m norte del parque central, San José"
            class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          ></textarea>
          <p class="text-xs text-slate-500 mt-1">
            Incluye referencias para que los árbitros y equipos visitantes puedan encontrar la cancha
          </p>
        </div>

        <!-- Teléfono de Contacto -->
        <div>
          <label for="telefono_contacto" class="block text-sm font-semibold text-slate-700 mb-2">
            Teléfono de Contacto
          </label>
          <input
            type="tel"
            id="telefono_contacto"
            name="telefono_contacto"
            pattern="[0-9]{4}-?[0-9]{4}"
            placeholder="8888-8888"
            class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <p class="text-xs text-slate-500 mt-1">
            8 dígitos (formato: 8888-8888)
          </p>
        </div>

        <!-- Logo URL (Opcional) -->
        <div>
          <label for="logo_url" class="block text-sm font-semibold text-slate-700 mb-2">
            URL del Logo
            <span class="text-xs font-normal text-slate-500">(Opcional)</span>
          </label>
          <input
            type="url"
            id="logo_url"
            name="logo_url"
            placeholder="https://ejemplo.com/logo.png"
            class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
          <p class="text-xs text-slate-500 mt-1">
            Puedes subir una imagen y pegar la URL aquí
          </p>
        </div>

        <!-- Coaching Staff Section -->
        <div class="border-t border-slate-200 pt-6">
          <h3 class="text-sm font-bold text-slate-700 mb-4">Cuerpo Técnico (Opcional)</h3>
          
          <!-- Director Técnico -->
          <div class="mb-4">
            <p class="text-xs font-semibold text-slate-600 mb-2">Director Técnico</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <div>
                <input
                  type="text"
                  name="director_tecnico_cedula"
                  pattern="[0-9]{9,12}"
                  placeholder="Cédula (9-12 dígitos)"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
              </div>
              <div>
                <input
                  type="text"
                  name="director_tecnico_nombre"
                  placeholder="Nombre completo"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
              </div>
            </div>
          </div>

          <!-- Asistente Técnico -->
          <div>
            <p class="text-xs font-semibold text-slate-600 mb-2">Asistente Técnico</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <div>
                <input
                  type="text"
                  name="asistente_tecnico_cedula"
                  pattern="[0-9]{9,12}"
                  placeholder="Cédula (9-12 dígitos)"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
              </div>
              <div>
                <input
                  type="text"
                  name="asistente_tecnico_nombre"
                  placeholder="Nombre completo"
                  class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Info Box -->
      <div class="mt-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-blue-800 mb-1">
              ¿Qué sigue después de crear el equipo?
            </p>
            <ul class="text-sm text-blue-700 space-y-1">
              <li>• Agrega mínimo <strong>1 jugador</strong> a tu roster (11 en producción)</li>
              <li>• Asigna un capitán desde la lista de jugadores</li>
              <li>• Envía tu equipo a revisión cuando esté completo</li>
              <li>• Espera la aprobación del administrador</li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Buttons -->
      <div class="mt-8 flex gap-4">
        <button
          type="submit"
          class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
        >
          Crear Equipo
        </button>
        <a
          href="/delegado/equipo"
          class="px-6 py-3 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors text-center"
        >
          Cancelar
        </a>
      </div>
    </form>
  </div>
</AdminSidebarLayout>

<script>
  // Show toast on success
  const teamCreated = document.querySelector('[data-team-created]');
  if (teamCreated) {
    const teamName = teamCreated.getAttribute('data-team-name');
    if (typeof window.showToast === 'function') {
      window.showToast(`Equipo "${teamName}" creado exitosamente`, 'success');
    }
  }

  // Format phone number input
  const phoneInput = document.getElementById('telefono_contacto') as HTMLInputElement;
  if (phoneInput) {
    phoneInput.addEventListener('input', (e) => {
      const target = e.target as HTMLInputElement;
      let value = target.value.replace(/\D/g, '');
      
      if (value.length > 8) {
        value = value.slice(0, 8);
      }
      
      if (value.length > 4) {
        value = value.slice(0, 4) + '-' + value.slice(4);
      }
      
      target.value = value;
    });
  }
</script>

<style>
  .container {
    animation: fadeIn 0.3s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

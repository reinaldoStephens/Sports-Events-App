---
import PublicLayout from '../../layouts/PublicLayout.astro';
import { supabase } from '../../lib/supabase';

const { data: noticias, error } = await supabase
  .from('noticias')
  .select('*')
  .order('created_at', { ascending: false });
---

<PublicLayout title="Noticias">
  <div class="bg-indigo-900 py-20 px-4 text-center text-white relative overflow-hidden">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1522778119026-d647f0565c6a?auto=format&fit=crop&q=80')] bg-cover bg-center opacity-10"></div>
      <div class="relative z-10 max-w-4xl mx-auto space-y-4">
        <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tighter">Noticias y Anuncios</h1>
        <p class="text-indigo-200 text-lg md:text-xl font-medium max-w-2xl mx-auto">Mantente al día con las últimas novedades de nuestros torneos.</p>
      </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-16">
    {noticias && noticias.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {noticias.map((noticia: any) => (
           <article class="bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-xl transition-all border border-slate-100 group">
              <div class="h-56 bg-slate-100 overflow-hidden relative">
                 {noticia.imagen_url ? (
                    <img src={noticia.imagen_url} alt={noticia.titulo} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" />
                 ) : (
                    <div class="w-full h-full flex items-center justify-center bg-slate-900 text-slate-700">
                        <svg class="w-16 h-16 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" /></svg>
                    </div>
                 )}
                 <div class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-widest text-slate-900">
                    {new Date(noticia.created_at).toLocaleDateString(undefined, { year: 'numeric', month: 'short', day: 'numeric' })}
                 </div>
              </div>
              <div class="p-8">
                 <h2 class="text-2xl font-black text-slate-900 uppercase tracking-tight leading-none mb-4 group-hover:text-blue-600 transition-colors">
                    {noticia.titulo}
                 </h2>
                 <p class="text-slate-500 leading-relaxed mb-6 line-clamp-3">
                    {noticia.contenido}
                 </p>
                 <a href={`/noticias/${noticia.id}`} class="inline-flex items-center gap-2 text-xs font-black uppercase tracking-widest text-slate-900 group-hover:text-blue-600 transition-colors">
                    Leer más <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" /></svg>
                 </a>
              </div>
           </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-20">
         <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-slate-50 mb-6">
            <svg class="w-10 h-10 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" /></svg>
         </div>
         <h2 class="text-2xl font-black text-slate-300 uppercase tracking-widest">Sin Noticias</h2>
         <p class="text-slate-400 mt-2">No hay noticias publicadas en este momento.</p>
      </div>
    )}
  </div>
</PublicLayout>

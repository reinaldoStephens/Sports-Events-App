---
import { actions } from 'astro:actions';
import { isInputError } from 'astro:actions';
import Layout from '../layouts/Layout.astro';

const result = Astro.getActionResult(actions.signin);
if (result?.data?.success) {
  return Astro.redirect('/admin');
}

---

<Layout title="Admin Login">
  <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <div class="flex justify-center mb-6">
        <div class="h-24 w-24 rounded-full overflow-hidden border-4 border-white shadow-xl">
            <img src="/logoJuegosProsaludCCSS.jpg" alt="Logo Juegos Prosalud CCSS" class="h-full w-full object-cover scale-110" />
        </div>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-slate-900">
        Inicia sesión en tu cuenta
      </h2>
      <p class="mt-2 text-center text-sm text-slate-600 font-medium">
        Acceso exclusivo para administradores
      </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md px-4">
      <div class="bg-white py-8 px-6 shadow-2xl rounded-3xl border border-slate-100">
        <form class="space-y-6" action={actions.signin} method="POST" id="loginForm">
          
          <div>
            <label for="email" class="block text-sm font-bold text-slate-700 mb-1">
              Correo Electrónico
            </label>
            <div class="mt-1">
              <input 
                id="email" 
                name="email" 
                type="email" 
                autocomplete="email" 
                required 
                placeholder="admin@prosalud.com"
                class="appearance-none block w-full px-4 py-3 border border-slate-200 rounded-xl shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-green-500/20 focus:border-green-600 text-slate-700 transition-all bg-slate-50"
              />
              <p id="email-error" class="mt-2 text-sm text-red-600 hidden"></p>
            </div>
          </div>

          <div>
            <label for="password" class="block text-sm font-bold text-slate-700 mb-1">
              Contraseña
            </label>
            <div class="mt-1">
              <input 
                id="password" 
                name="password" 
                type="password" 
                autocomplete="current-password" 
                required 
                placeholder="••••••••"
                class="appearance-none block w-full px-4 py-3 border border-slate-200 rounded-xl shadow-sm placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-green-500/20 focus:border-green-600 text-slate-700 transition-all bg-slate-50"
              />
            </div>
          </div>

          {result?.error && (
            <div class="rounded-xl bg-red-50 p-4 border border-red-100">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-bold text-red-800">
                    Acceso Denegado
                  </h3>
                  <div class="mt-1 text-sm text-red-700">
                    <p>{isInputError(result.error) ? 'Datos inválidos' : result.error.message}</p>
                  </div>
                </div>
              </div>
            </div>
          )}

          <div>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-lg text-sm font-bold text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all hover:scale-[1.02] active:scale-95">
              Iniciar Sesión
            </button>
          </div>

          <div class="relative py-2">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-slate-100"></div>
            </div>
          </div>

          <div>
             <a href="/" class="w-full flex justify-center items-center gap-2 py-3 px-4 border border-slate-200 rounded-xl text-sm font-bold text-slate-600 hover:bg-slate-50 transition-all active:scale-95">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Volver al Sitio Público
             </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>

<script>
    import { actions } from 'astro:actions';
    
    // Client-side validation
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const emailInput = document.getElementById('email') as HTMLInputElement;
    const emailError = document.getElementById('email-error');

    // Handle action result success redirect
    // Since actions run on server, for 302 redirect we normally handle checking URL.
    // But standard form submission will reload page.
    // If we want SPA-like feel we can use navigate, but simple form is fine.
    // Wait... if action succeeds, how do we redirect?
    // In Astro Actions, we can just return redirect from handler? Or verify success here.
    
    // We can also check cookie existence here if we want but redirect is usually cleaner from server if possible, 
    // or just check 'result' in script? 
    // Astro actions don't auto-redirect on success unless specified.
    
    // Let's use standard form behavior, but add client validation.
    
    form?.addEventListener('submit', (e) => {
        const email = emailInput.value;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        
        if (!emailRegex.test(email)) {
             e.preventDefault();
             if(emailError) {
                 emailError.textContent = "Por favor, introduce un correo electrónico válido.";
                 emailError.classList.remove('hidden');
             }
             emailInput.focus();
        } else {
             if(emailError)  emailError.classList.add('hidden');
        }
    });
</script>

<script>
  import { navigate } from 'astro:transitions/client';
  
  // If the server action returned success: true, redirect.
  // We can't easily see the `result` constant in script module without passing it.
  // But we can check if we are redirected or if a cookie is set.
  // Simpler: The Action handler itself can redirect! 
  // Let's modify the action to returning nothing and letting middleware handle next request 
  // OR we add a script here to check for success flag.
</script>

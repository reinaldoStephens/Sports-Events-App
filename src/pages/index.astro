---
import PublicLayout from '../layouts/PublicLayout.astro';
import PublicTournamentCard from '../components/PublicTournamentCard.astro';
import { supabase } from '../lib/supabase';
import { getTournamentChampion } from '../utils/champion';

// Fetch active tournaments
const { data: torneos, error } = await supabase
  .from('torneos')
  .select('*')
  .order('created_at', { ascending: false });

if (error) console.error("Error fetching tournaments:", error);

// Fetch champions for finished tournaments
const championsData: Record<string, any> = {};
if (torneos && torneos.length > 0) {
  const finishedTorneos = torneos.filter(t => t.estado === 'finalizado');
  
  // Resolve all promises concurrently
  const championResults = await Promise.all(
    finishedTorneos.map(t => getTournamentChampion(supabase, t.id, t.tipo))
  );
  
  finishedTorneos.forEach((t, index) => {
    championsData[t.id] = championResults[index];
  });
}

// Optimization: Cache this page for 60 seconds
Astro.response.headers.set('Cache-Control', 'public, max-age=60, s-maxage=60');
---

<PublicLayout title="Torneos - Juegos Prosalud CCSS">
        <!-- Hero Section -->
        <section class="py-12 bg-gradient-to-br from-blue-50 via-white to-green-50">
            <div class="max-w-7xl mx-auto text-center px-4">
                <h1 class="text-4xl md:text-6xl font-extrabold text-slate-900 tracking-tight mb-4">
                    Torneos <span class="text-blue-600">Deportivos</span>
                </h1>
                <p class="text-lg md:text-xl text-slate-600 max-w-2xl mx-auto">
                    Explora los torneos activos, consulta tablas de posiciones, calendarios y estadísticas.
                </p>
            </div>
        </section>

        <!-- Tournaments Grid -->
        <section class="py-12">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex justify-between items-center mb-8">
                    <div>
                        <h2 class="text-2xl md:text-3xl font-bold text-slate-900">Torneos Disponibles</h2>
                        <p class="text-slate-500 mt-1">Selecciona un torneo para ver más detalles</p>
                    </div>
                    <div class="text-sm font-bold text-slate-400 uppercase">
                        {torneos?.length || 0} Torneos
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {torneos?.map((torneo) => (
                        <PublicTournamentCard tournament={torneo} championData={championsData[torneo.id]} />
                    ))}
                </div>

                {(!torneos || torneos.length === 0) && (
                    <div class="col-span-full py-24 text-center bg-white rounded-3xl border-2 border-dashed border-slate-200">
                        <div class="w-24 h-24 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6 text-slate-300">
                            <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-slate-900">No hay torneos disponibles</h3>
                        <p class="text-slate-500 mt-2 max-w-xs mx-auto">Los torneos aparecerán aquí cuando sean creados por los administradores.</p>
                    </div>
                )}
            </div>
        </section>
</PublicLayout>

<style>
    html {
        scroll-behavior: smooth;
    }
</style>

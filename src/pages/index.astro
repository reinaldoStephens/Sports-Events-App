---
import Layout from '../layouts/Layout.astro';
import PublicEventCard from '../components/PublicEventCard.astro';
import { supabase } from '../lib/supabase';

// Filter logic
const search = Astro.url.searchParams.get('search') || '';
const dateFilter = Astro.url.searchParams.get('date') || '';
const today = new Date().toISOString().split('T')[0];

let query = supabase
  .from('events')
  .select('*')
  .order('date', { ascending: true });

if (dateFilter) {
  query = query.gte('date', dateFilter);
} else {
  // Default: Only future/today events if no specific date selected
  query = query.gte('date', today);
}

if (search) {
  query = query.or(`title.ilike.%${search}%,location.ilike.%${search}%`);
}

const { data: events, error } = await query;
---

<Layout title="Eventos Deportivos - Próximos Encuentros">
    <main class="min-h-screen bg-[#F3F5F9] font-sans">
        
        <!-- Sidebar Navigation (Mock for Layout) -->
        <aside class="fixed left-0 top-0 h-full w-20 bg-white border-r border-gray-100 hidden lg:flex flex-col items-center py-6 gap-6 shadow-sm z-50">
            <div class="w-10 h-10 bg-black rounded-full flex items-center justify-center text-white font-bold text-xs">SM</div>
            
            <nav class="flex flex-col gap-4 mt-4 w-full px-2">
                <a href="/" class="p-3 bg-black text-white rounded-xl flex justify-center shadow-lg shadow-black/20">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </a>
                <div class="w-full h-px bg-gray-100 my-2"></div>
                <!-- Mock icons -->
                <div class="p-3 text-gray-400 hover:text-gray-600 cursor-pointer flex justify-center"><svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg></div>
                <div class="p-3 text-gray-400 hover:text-gray-600 cursor-pointer flex justify-center"><svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg></div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="lg:pl-24 pr-4 py-6 max-w-[1600px] mx-auto w-full">
            
            <!-- Top Bar -->
            <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10 gap-4">
                <div>
                    <h1 class="text-3xl font-bold text-slate-900 tracking-tight">Calendario de Eventos</h1>
                    <p class="text-slate-500 mt-1">Explora y regístrate a los próximos encuentros deportivos.</p>
                </div>
                
                <div class="flex items-center gap-4 w-full md:w-auto">
                    <a href="/login" class="px-5 py-2.5 bg-white border border-gray-200 text-slate-700 rounded-full text-sm font-semibold hover:bg-gray-50 transition shadow-sm">
                        Admin Login
                    </a>
                </div>
            </header>

            <!-- Search & Filters Toolbar -->
            <div class="bg-white rounded-2xl p-2 shadow-[0_2px_20px_rgba(0,0,0,0.04)] mb-8 flex flex-col sm:flex-row items-center gap-2">
                <div class="flex-1 w-full relative">
                     <form method="GET" class="w-full flex items-center gap-2">
                        <div class="relative flex-1">
                            <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                            <input 
                                type="text" 
                                name="search"
                                value={search}
                                placeholder="Buscar eventos..." 
                                class="w-full pl-12 pr-4 py-3 bg-transparent border-none outline-none text-gray-700 placeholder-gray-400 font-medium"
                            />
                        </div>
                        <div class="h-8 w-px bg-gray-200 hidden sm:block"></div>
                        <div class="relative px-2 hidden sm:block">
                             <input 
                                type="date" 
                                name="date" 
                                value={dateFilter}
                                class="bg-transparent border-none outline-none text-gray-600 text-sm font-medium cursor-pointer"
                                onchange="this.form.submit()"
                             />
                        </div>
                     </form>
                </div>
                
                <div class="flex items-center gap-2 px-2 w-full sm:w-auto border-t sm:border-t-0 border-gray-100 pt-2 sm:pt-0">
                    <span class="text-sm font-medium text-gray-500 hidden sm:inline">Vista:</span>
                    <button class="p-2 text-gray-400 hover:text-black transition"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg></button>
                    <button class="p-2 text-black bg-gray-100 rounded-lg"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/></svg></button>
                </div>
            </div>

            <!-- Events Grid -->
            <div>
                <h2 class="text-xl font-bold text-slate-800 mb-6">Próximos Juegos</h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    {events?.map((event) => (
                        <PublicEventCard event={event} />
                    ))}
                    
                    {(!events || events.length === 0) && (
                        <div class="col-span-full py-20 text-center">
                            <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-400">
                                <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900">No hay eventos encontrados</h3>
                            <p class="text-gray-500 mt-1">Intenta ajustar tu búsqueda o vuelve más tarde.</p>
                            {search && (
                                <a href="/" class="mt-4 inline-block text-blue-600 font-medium hover:underline">Limpiar Filtros</a>
                            )}
                        </div>
                    )}
                </div>
            </div>

        </div>
    </main>
</Layout>

<style>
    /* Custom Scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #f1f1f1; 
    }
    ::-webkit-scrollbar-thumb {
        background: #d4d4d8; 
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #a1a1aa; 
    }
</style>

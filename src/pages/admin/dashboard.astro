import AdminSidebarLayout from '../../layouts/AdminSidebarLayout.astro';
import { supabase } from '../../lib/supabase';
import { actions } from 'astro:actions';
import ToastNotification from '../../components/ToastNotification.astro';
import { getTournamentChampion } from '../../utils/champion';

// Fetch tournaments
const { data: torneos } = await supabase
  .from('torneos')
  .select('*')
  .order('creado_at', { ascending: false });

// Consulta r치pida para contar equipos sin traer todos sus datos
const { count: totalEquipos } = await supabase
  .from('equipos')
  .select('*', { count: 'exact', head: true });

const { data: deportes } = await supabase
  .from('deportes')
  .select('id, nombre')
  .order('nombre', { ascending: true });

// Buscamos el objeto del deporte f칰tbol en el array
const deporteFutbol = deportes?.find(d => 
  d.nombre.toLowerCase().includes('f칰tbol') || 
  d.nombre.toLowerCase().includes('futbol')
);

// Fetch champions for finished tournaments
const championsData: Record<string, any> = {};
if (torneos && torneos.length > 0) {
  const finishedTorneos = torneos.filter(t => t.estado === 'finalizado');
  
  // Resolve all promises concurrently
  const championResults = await Promise.all(
    finishedTorneos.map(t => getTournamentChampion(supabase, t.id, t.tipo))
  );
  
  finishedTorneos.forEach((t, index) => {
    championsData[t.id] = championResults[index];
  });
}

const createResult = Astro.getActionResult(actions.createTournament);
